{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "dist",
    "lib": ["es2018", "esnext"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}
